<h1>Papers</h1>
<% dato.papers.sort_by(&:position)[0...3].each do |b| %>
	<h2><%= link_to b.title, "/papers-full/#{b.title.parameterize}/index.html" %></h2>
	<div class="excerpt">
		<% b.body[0...1].each do |e| %>
			<% case e.item_type.api_key %>	
			<% when "text" %>
				<div class="excerpt"><p><%= markdownify(e.text.truncate_words(108)) %></p></div>
			<% when "image" %>
				<%= image_tag e.image.url(w: 720, fit: :max), alt: e.image.alt %>
			<% end %>
		<% end %>
	</div>
<% end %>

