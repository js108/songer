---
title: Product-Oriented Coffee Specialists
---
<div class="home-main">

<!--logo section-->
	<div class="logo row border-bottom margin-bottom">
		<div class="left"><img src="/images/logo-alt.svg"></div>		
	</div>

<!--intro section-->
	<section class="border-bottom padding-bottom margin-bottom">
		<div class="row flex-container">
			<div class="left"><%= image_tag dato.about_home.image.url %></div>
			<div class="right">
			<h1 class="highlight"><%= dato.pullquote_home.pullquote %></h1>
			</div>
		</div>
	</section>

<!--about/services section-->

	<section class="border-bottom padding-bottom margin-bottom">
		<div class="row">
			<div class="left-push mid-col">
				<h2 class="float-l margin-top-0 line-height-sm"><a class="border-right" href="/about"><%= dato.about_home.title %></a></h2>
				<div class="margin-top-minus margin-bottom"><%= markdownify(dato.about_home.text) %></div>
				<h2 class="float-l margin-top-0 line-height-sm"><a class="border-right" href="/services"><%= dato.services_home.title %></a></h2>
				<div class="margin-top-minus"><%= markdownify(dato.services_home.text) %></div>
			</div>
		</div>
	</section>


<!-- Papers Section -->
	<section class="border-bottom padding-bottom margin-bottom">
		<div class="row">
			<div class="full">
				<h2 class="float-l margin-top-0 line-height-sm">
					<a class="border-right" href="/papers"><%= dato.paper_home.title %></a>
				</h2>
				<div class="margin-top-minus"><%= markdownify(dato.paper_home.body) %></div>
			</div>
		</div>

		<div class="row">
			<% dato.papers.sort_by(&:position)[0...1].each do |paper| %>
				<div class="card">
					<h3>
						<div class="margin-left-sm"><span class="highlight">Free Preview</span></div>
						<a href="/papers-full/<%= "#{paper.title.parameterize}" %>/index.html"><%= paper.title %>
					</h3>
					<% home_i = paper.home_image %>
					<% if home_i %>
						<%= image_tag home_i.url(w: 600, fit: :max), alt: home_i.alt %>
					<% end %>
					</a>
				</div>
			<% end %>
			<% dato.papers.sort_by(&:position)[1...3].each do |paper| %>
				<div class="card">
					<h3><a href="/papers/<%= "#{paper.title.parameterize}" %>/index.html"><%= paper.title %></h3>
					<% home_i = paper.home_image %>
					<% if home_i %>
						<%= image_tag home_i.url(w: 600, fit: :max), alt: home_i.alt %>
					<% end %>
					</a>
				</div>
			<% end %>
		</div>

		<div class="row">
			<% dato.papers.sort_by(&:position)[3...6].each do |paper| %>
				<div class="card">
					<h3><a href="/papers/<%= "#{paper.title.parameterize}" %>/index.html"><%= paper.title %></h3>
					<% home_i = paper.home_image %>
					<% if home_i %>
						<%= image_tag home_i.url(w: 600, fit: :max), alt: home_i.alt %>
					<% end %>
					</a>
				</div>
			<% end %>
		</div>

		<div class="row">
			<% dato.papers.sort_by(&:position)[6...9].each do |paper| %>
				<div class="card">
					<h3><a href="/papers/<%= "#{paper.title.parameterize}" %>/index.html"><%= paper.title %></h3>
					<% home_i = paper.home_image %>
					<% if home_i %>
						<%= image_tag home_i.url(w: 600, fit: :max), alt: home_i.alt %>
					<% end %>
					</a>
				</div>
			<% end %>
		</div>
	</section>


<!-- newsletters Section -->
	<section>
		<div class="row">
			<div class="full">
				<h2 class="float-l margin-top-0 line-height-sm"><a class="border-right" href="/papers"><%= dato.newsletter_home.title %></a></h2>
				<div class="margin-top-minus"><%= markdownify(dato.newsletter_home.body) %></div>
			</div>
		</div>

		<div class="row">
			<% dato.newsletters.sort_by(&:position)[0...3].each do |newsletter| %>
			<div class="card">
				<h3><%= link_to newsletter.title, "/newsletters/#{newsletter.title.parameterize}/index.html" %></h3>
			</div>
			<% end %>
		</div>

		<div class="row">
			<% dato.newsletters.sort_by(&:position)[3...6].each do |newsletter| %>
			<div class="card">
				<h3><%= link_to newsletter.title, "/newsletters/#{newsletter.title.parameterize}/index.html" %></h3>
			</div>
			<% end %>
		</div>

		<div class="row">
			<% dato.newsletters.sort_by(&:position)[6...9].each do |newsletter| %>
			<div class="card">
				<h3><%= link_to newsletter.title, "/newsletters/#{newsletter.title.parameterize}/index.html" %></h3>
			</div>
			<% end %>
		</div>
	</section>

</div>