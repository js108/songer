<h1><%= paper.title %></h1>
<% paper.body.each do |e| %>
	<% case e.item_type.api_key %>
		<% when "caption" %>
			<div class="caption"><%= e.caption %></div>		
		<% when "text" %>
			<p><%= markdownify(e.text) %>
		<% when "footnote" %>
			<div class="border-top"><%= markdownify(e.footnote) %></div>
		<% when "image" %>
			<%= image_tag e.image.url(w: 720, fit: :max), alt: e.image.alt %>
		<% when "file" %>
			<div class="border-top"><p><%= link_to e.title, e.file.url %></p></div>
		<% when "video" %>
			<%= e.video.url %>
	<% end %>
<% end %>